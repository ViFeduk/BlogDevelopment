@using Microsoft.AspNetCore.Identity
@using BlogDevelopment.BLL.BusinesModels
@model BlogDevelopment.BLL.BusinesModels.ApplicationUser

@{
    ViewData["Title"] = "Профиль пользователя";
    var roles = ViewBag.Roles as IList<string>;
}

<h2>Профиль пользователя</h2>

<div>
    <h3>Информация о пользователе</h3>
    <p><strong>Имя пользователя:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.Email</p>

    <h4>Роли пользователя</h4>
    <ul>
        @foreach (var role in roles)
        {
            <li>@role</li>
        }
    </ul>
</div>

<div>
    <a href="@Url.Action("Edit", "Account")">Изменить профиль</a>
</div>