@model BlogDevelopment.Models.ViewModels.editModels.EditProfileViewModel

<h2>Редактирование профиля</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Имя пользователя</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <h4>Роли пользователя</h4>
        <table>
            <thead>
                <tr>
                    <th>Роль</th>
                    <th>Выбрано</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <tr>
                        <td>@Model.Roles[i].RoleName</td>
                        <td>
                            <input type="checkbox" asp-for="Roles[i].IsSelected" value="true" />
                            <input type="hidden" name="Roles[@i].RoleName" value="@Model.Roles[i].RoleName" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-success">Сохранить изменения</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Profile")">Отмена</a>
    </div>
</form>